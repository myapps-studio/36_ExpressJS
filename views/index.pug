doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    title Google platform
    style
      include ./style.css
  body
    .main
      h2 Log in Box
      form(action='http://localhost:3000/google_after_login', method='GET')
        p
          | Login:
          input(type='text', name='login', class="input")
        p
          | Password:
          input(type='text', name='password', class="input")
        input(type='submit', value='Submit', class='submit')
      form(action='http://localhost:3000/auth/google', method='GET')  
        input(type='submit', value='Log in by Google', class='submit')
